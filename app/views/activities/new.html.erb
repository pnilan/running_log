<% provide(:title, 'Add an Activity') %>

<h1>Add an Activity</h1>

<div class="row">
	<div class="span6 offset3">
		<%= render 'shared/error_messages' %>
		<%= form_for(@activity) do |f| %>

				<%= f.label :type_id, "Activity type" %>
				<%= f.text_field :type_id %>

				<%= f.label :date, "Activity date" %>
				<%= f.date_field :date, value: Date.today %> 		

				<%= f.label :distance, "Distance" %>
				<%= f.text_field :distance %>

				<%= f.label :duration, "Duration" %>
				<%= f.text_field :duration %> 
			
				<%= f.label :pace, "Pace" %>
				<%= f.text_field :pace %>
	
				<%= f.label :calories, "Calories burned" %>
				<%= f.text_field :calories %>
				
				<%= f.label :bpm, "Average BPM" %>
				<%= f.text_field :bpm %>

				<%= f.label :content, "Notes" %>
				<%= f.text_field :content %>

			<%= f.submit "Add new activity!", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
