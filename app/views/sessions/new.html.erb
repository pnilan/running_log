<% provide(:title, 'Sign in') %>

<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<div class="field">
				<%= f.label :email %>
				<%= f.text_field :email, id: "email_signin" %>
			</div>

			<div class="field">
				<%= f.label :password %>
				<%= f.password_field :password, id: "password_signin" %>
			</div>

			<div class="form-inline">
				<%= f.submit "Sign in", class: 'btn btn-large btn-primary', id: "signin_button" %>
				<span class="checkbox inline right">
				<%= check_box_tag :remember_me, 1, params[:remember_me] %>
				<%= label_tag :remember_me %>
				</span>
			</div>
		<% end %>
				<p class="below_signin"><%= link_to "Forgot password?", new_password_reset_path %> Â· New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>