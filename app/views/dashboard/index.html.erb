<div class="container-fluid">
	<div class="row">
			<div class="col-md-4 col-xs-12">
				<div class="widget">
					<div class="widget-body">
						<%= @distance_today %>
					</div>
					<div class="widget-label">
						<p>Miles today</p>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-xs-12">
				<div class="widget">
					<div class="widget-body">
						<%= @distance_this_week %>
					</div>
					<div class="widget-label">
						<p>Miles this week</p>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-xs-12">
				<div class="widget">
					<div class="widget-body">
						<%= @distance_this_month %>
					</div>
					<div class="widget-label">
						<p>Miles this month</p>
					</div>
				</div>
			</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div class="widget chart-widget">
				<canvas id="weekly-chart"></canvas>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6">
			<div class="widget">
				CURRENT SHOE
			</div>
		</div>
		<div class="col-xs-6">
			<div class="widget">
				FAVORITE ROUTE
			</div>
		</div>
	</div>

</div>