group :development, :test do
	gem 'rspec-rails', '2.13.1'
end

group :test do
	gem 'guard-rspec', '2.5.0'
	gem 'capybara', '2.1.0'
	gem 'factory_girl_rails', '4.2.1'
end

#Twitter bootstrap
gem 'twitter-bootstrap-rails'

# Asset template engines
